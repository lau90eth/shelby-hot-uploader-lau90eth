{
  "name": "@shelby-protocol/clay-codes",
  "version": "0.0.2",
  "type": "module",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "node": {
        "import": "./dist/index-node.js",
        "types": "./dist/index.d.ts"
      },
      "default": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts"
      }
    },
    "./clay.wasm": "./dist/clay.wasm"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "devDependencies": {
    "@vitest/browser": "^3.1.2",
    "playwright": "^1.48.2",
    "rimraf": "^6",
    "tsup": "^8.4.0",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  },
  "scripts": {
    "lint": "biome check .",
    "fmt": "biome check . --write",
    "build": "tsc --noEmit && (rimraf dist; tsup)",
    "build:wasm": "bash ./scripts/build-wasm.sh",
    "test": "vitest dev",
    "test:once": "vitest run",
    "test:browser": "vitest run --config vitest.browser.config.ts"
  }
}