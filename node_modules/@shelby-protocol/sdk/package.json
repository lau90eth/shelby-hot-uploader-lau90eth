{
  "name": "@shelby-protocol/sdk",
  "version": "0.0.9",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    "./node": {
      "types": "./dist/node/index.d.ts",
      "import": "./dist/node/index.mjs"
    },
    "./browser": {
      "types": "./dist/browser/index.d.ts",
      "import": "./dist/browser/index.mjs"
    }
  },
  "dependencies": {
    "graphql": "^16.11.0",
    "graphql-request": "^7.2.0",
    "graphql-tag": "^2.12.6",
    "p-limit": "7.1.1",
    "zod": "^3.24.3",
    "@shelby-protocol/clay-codes": "0.0.2",
    "@shelby-protocol/reed-solomon": "0.0.1"
  },
  "devDependencies": {
    "@aptos-labs/ts-sdk": "^5.1.1",
    "@graphql-codegen/cli": "^6.0.0",
    "@graphql-codegen/typescript-graphql-request": "^6.3.0",
    "@parcel/watcher": "^2.5.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22",
    "dotenv": "^16.5.0",
    "fs-extra": "^11.3.1",
    "rimraf": "^6",
    "tsup": "^8.4.0",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  },
  "peerDependencies": {
    "@aptos-labs/ts-sdk": "^2.0.1 || ^3.0.0 || ^4.0.0 || ^5.0.0"
  },
  "scripts": {
    "lint": "biome check .",
    "fmt": "biome check . --write",
    "generate": "graphql-codegen",
    "generate:watch": "graphql-codegen --watch",
    "verify:config": "tsx scripts/verify-config.ts",
    "build": "tsc --noEmit && (rimraf dist; tsup) && pnpm run verify:config",
    "test": "vitest dev",
    "test:once": "vitest run",
    "benchmark:erasure": "tsx benchmark/erasure.ts"
  }
}