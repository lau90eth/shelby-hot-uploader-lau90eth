{
  "name": "@identity-connect/crypto",
  "version": "0.3.0",
  "private": false,
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs",
    "types": "./dist/index.d.ts"
  },
  "dependencies": {
    "@noble/hashes": "^1.3.1",
    "ed2curve": "^0.3.0",
    "tweetnacl": "^1.0.3",
    "@aptos-connect/wallet-api": "0.6.0"
  },
  "peerDependencies": {
    "@aptos-labs/ts-sdk": "^1.33.1 || ^2.0.0 || ^3.0.0 || ^4.0.0 || ^5.0.0"
  },
  "devDependencies": {
    "@types/ed2curve": "^0.2.2",
    "@types/jest": "^29.5.1",
    "@types/node": "^22.18.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.0.5",
    "ts-node": "10.9.1",
    "tsup": "^7.1.0",
    "@petra/tsconfig": "0.0.0"
  },
  "files": [
    "dist",
    "src",
    "!src/**.test.ts",
    "!src/**/__tests__"
  ],
  "scripts": {
    "build:bundle": "tsup src/index.ts --tsconfig tsconfig.build.json --format cjs,esm --sourcemap",
    "build:declarations": "tsgo --project tsconfig.build.json --emitDeclarationOnly --declaration --declarationMap",
    "build": "pnpm build:bundle && pnpm build:declarations",
    "lint": "biome check",
    "lint:fix": "biome check --write --unsafe",
    "lint:tsc": "tsgo --noEmit -p ./tsconfig.json",
    "test": "jest"
